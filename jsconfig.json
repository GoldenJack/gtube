{
    "compilerOptions": {
      "target": "es2017",
      "allowSyntheticDefaultImports": false,
      "baseUrl": "./",
      "paths": {
        "atoms/*": ["src/js/ui/atoms/*"],
        "molecules/*": ["src/js/ui/molecules/*"],
        "organisms/*": ["src/js/ui/organisms/*"],
        "templates/*": ["src/js/ui/templates/*"],
        "pages/*": ["src/js/ui/pages/*"],
        "features/*": ["src/js/features/*"],
        "constants/*": ["src/js/constants/*"],
        "utils/*": ["src/js/utils/*"],
        "store/*": ["src/js/store/*"],
        "img/*": ["src/assets/img/*"],
        "HOC/*": ["src/js/HOC/*"],
        "config": ["src/js/config"],
        "hooks": ["src/js/hooks"]
      }
    },
    "exclude": ["node_modules", "dist"]
}